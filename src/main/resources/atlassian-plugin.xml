<atlassian-plugin key="${plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <scoped-modules key="modules" location="/modules" />

    <scoped-web-item key="stylicious-web-item" section="system.user/user-preferences" weight="100">
        <label>Stylicious</label>
        <link>/</link>
        <styleClass>stylicious-web-item</styleClass>
    </scoped-web-item>

    <scoped-web-item key="selectacular-web-item" section="system.user/user-preferences" weight="110">
        <label>Selectacular</label>
        <link>/</link>
        <styleClass>selectacular-web-item</styleClass>
    </scoped-web-item>

    <scoped-web-resource key="selectacular-css">
        <resource type="download" name="selectacular.css" location="css/selectacular.css"/>
        <context>atl.general</context>
    </scoped-web-resource>

    <scoped-web-resource key="codemirror2">
        <resource type="download" name="codemirror.js" location="codemirror2/lib/codemirror.js"/>
        <resource type="download" name="codemirror.css" location="codemirror2/lib/codemirror.css"/>
        <resource type="download" name="css.js" location="codemirror2/mode/css/css.js"/>
        <resource type="download" name="htmlmixed.js" location="codemirror2/mode/htmlmixed/htmlmixed.js"/>
        <resource type="download" name="javascript.js" location="codemirror2/mode/javascript/javascript.js"/>
        <resource type="download" name="velocity.js" location="codemirror2/mode/velocity/velocity.js"/>
        <resource type="download" name="xml.js" location="codemirror2/mode/xml/xml.js"/>
        <resource type="download" name="theme.css" location="codemirror2/theme/default.css"/>
    </scoped-web-resource>

    <scoped-web-resource key="codemirror2-themes">
        <resource type="download" name="cobalt.css" location="codemirror2/theme/cobalt.css"/>
        <resource type="download" name="eclipse.css" location="codemirror2/theme/eclipse.css"/>
        <resource type="download" name="elegant.css" location="codemirror2/theme/elegant.css"/>
        <resource type="download" name="neat.css" location="codemirror2/theme/neat.css"/>
        <resource type="download" name="night.css" location="codemirror2/theme/night.css"/>
    </scoped-web-resource>

</atlassian-plugin>
